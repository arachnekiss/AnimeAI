{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "noEmit": false,
    "outDir": "dist/backend",
    "rootDir": "src"
  },
  "include": [
    "src/backend/**/*",
    "src/engine/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "src/app/**/*"
  ]
}
